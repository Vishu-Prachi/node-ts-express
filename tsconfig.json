{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "CommonJS",
    "target": "ES2020",
    "types": ["node"],

    // Output Settings
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,
    "esModuleInterop": true,
    "emitDeclarationOnly": false,

    // Type Checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Other Useful Options
    "skipLibCheck": true,
    "verbatimModuleSyntax": false
  },
  "include": ["src"]
}
